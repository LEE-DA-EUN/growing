<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/single_line_btn"
            android:layout_width="217dp"
            android:layout_height="143dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="300dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:padding="0sp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/singleline_btn_image" />

        <ImageButton
            android:id="@+id/emotion_trsh_bth"
            android:layout_width="143dp"
            android:layout_height="167dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="383dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:padding="0sp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/emotiontrashcan_btn_image" />

        <ImageButton
            android:id="@+id/bucketlist_btn"
            android:layout_width="145dp"
            android:layout_height="130dp"
            android:layout_marginLeft="173dp"
            android:layout_marginTop="290dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:padding="0sp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/bucketlist_btn_image" />

        <ImageButton
            android:id="@+id/rivew_btn"
            android:layout_width="133dp"
            android:layout_height="144dp"
            android:layout_marginLeft="196dp"
            android:layout_marginTop="378dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:padding="0sp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/reviewnote_btn_image" />

        <TextView
            android:id="@+id/today_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="120dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/nanummyeongjobold"
            android:text="2020.06.19"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_goal"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@android:drawable/editbox_background"
            android:ems="30"
            android:gravity="center"
            android:hint="나만의 목표 설정 하기"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="155dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/nanummyeongjobold"
            android:text="다직해야 "
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

</RelativeLayout>